@model BookModel
<div class="card mb-4 shadow-sm">
    <img src = "@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/img.jpg": Model.CoverImageUrl)" class="card-img-top img-thumbnail" width="100%" height="225" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title)?"Title is not available":Model.Title)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description)?"No description about this book":Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author)?"Author Name":Model.Author)</small>
        </div>
    </div>
</div>